# https://newsboat.org/releases/2.21/docs/newsboat.html

feedlist-format     "%4i%S%n %11u %t"
articlelist-format  "%4i %f %D   %?T?|%-17T|  ?%t"

cache-file "~/.cache/newsboat/cache.db"
error-log "~/.cache/newsboat/error.log"
save-path "~/.cache/newsboat/savedfiles"

# General
browser     "nohup firefox '%u' > /dev/null 2>&1&"

# Feeds
auto-reload no
reload-threads 32
download-retries 4
download-timeout 10

# notify
notify-always		no
notify-program      "/usr/bin/notify-send"
notify-format		"ï‡˜  %n unread articles total"

# q quits the program
bind-key Q hard-quit

bind-key h quit
bind-key j down
bind-key k up
bind-key l open

bind-key g home
bind-key G end

bind-key o open-in-browser-and-mark-read
bind-key q quit

bind-key J next-feed articlelist
bind-key K prev-feed articlelist

bind-key f goto-url


bind-key a toggle-article-read
bind-key A mark-feed-read
bind-key ^A mark-all-feeds-read

bind-key d pagedown
bind-key u pageup

bind-key n next-unread
bind-key N prev-unread

bind-key s sort
bind-key S rev-sort

bind-key B toggle-source-view
bind-key U toggle-show-read-feeds

bind-key u show-urls
bind-key m bookmark
bind-key x pb-delete

bind-key w save

# colors
color background         default   default
color listnormal         default   default
color listnormal_unread  default   default   bold
color listfocus          black     yellow    bold
color listfocus_unread   black     yellow    bold
color info               default   black
color article            default   default

# highlights
highlight article "^(Feed|Title|Link|Date|Author):.*$" color31 color0
highlight article "https?://[^ ]+" color9 color0 protect


